{
  "name": "bupy7/php-html-form",
  "description": "A basic framework agnostic form building package with a few extra niceties like remembering old input and retrieving error messages.",
  "authors": [
    {
      "name": "Adam Wathan",
      "email": "adam.wathan@gmail.com"
    },
    {
      "name": "Vasily Velosloodcev",
      "email": "vasily.belosloodcev@gmail.com"
    }
  ],
  "version": "2.0.0",
  "license": "MIT",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "mockery/mockery": "^1.3.1",
    "php-coveralls/php-coveralls": "^2.2.0",
    "phpunit/phpunit": ">=5.5 <6.0.0",
    "friendsofphp/php-cs-fixer": "^2.16.1"
  },
  "autoload": {
    "psr-0": {
      "AdamWathan\\Form\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": ["tests/"]
  },
  "scripts": {
    "test:run": "./vendor/bin/phpunit --no-coverage",
    "test:run-with-cov": "./vendor/bin/phpunit",
    "cs:fix": "./vendor/bin/php-cs-fixer fix --config=./phpcs.php"
  }
}
